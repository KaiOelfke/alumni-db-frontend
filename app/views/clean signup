              class="form-control" 
              id="email" 
              placeholder="Email address" 
              tabindex="1" 
              autofocus="true" 
              required />
              <span ng-show="signupForm.email.$valid && unusedEmail(signupData.email)" class="success-icon">YEAH!</span>
          </div>
